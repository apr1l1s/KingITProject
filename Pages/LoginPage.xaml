<Page x:Class="KingITProject.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KingITProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel Style="{DynamicResource MainWindowStackPanel}">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="LogBox"
                     Margin="0,0,0,5"/>
            <TextBlock Text="Пароль"
                       Margin="0,5,0,0"/>
            <PasswordBox x:Name="PassBox"
                         Margin="0,0,0,5"/>
            <Button Click="Login" Style="{DynamicResource MainWindowLogButton}"/>
        </StackPanel>
    </Grid>
</Page>
