<Page x:Class="KingITProject.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KingITProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Image Source="../icon.png"
               Width="200"
               Height="200"
               Margin="0,0,0,200"/>
        <StackPanel Style="{DynamicResource MainWindowStackPanel}">
            <TextBlock Style="{DynamicResource TextBlockStyle}" 
                       Text="Логин"/>
            <TextBox Style="{DynamicResource TextBoxStyle}" 
                     x:Name="LogBox"/>
            <TextBlock Text="Пароль"
                       Style="{DynamicResource TextBlockStyle}"/>
            <PasswordBox Style="{DynamicResource PasswordBoxStyle}" 
                         x:Name="PassBox"/>
            <Button Template="{DynamicResource ButtonTemplate}" 
                    Click="Login" 
                    Style="{DynamicResource MainWindowLogButton}"/>
        </StackPanel>
    </Grid>
</Page>
